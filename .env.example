# Healthcare AI Assistant Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# FHIR Server Configuration
FHIR_SERVER_URL=http://localhost:8080/fhir
FHIR_API_KEY=
FHIR_USERNAME=
FHIR_PASSWORD=

# SMART on FHIR Authentication (overrides vendor discovery when set)
SMART_CLIENT_ID=
SMART_CLIENT_SECRET=
SMART_SCOPE=system/*.read patient/*.read user/*.read
SMART_AUTH_URL=
SMART_TOKEN_URL=
SMART_WELL_KNOWN=
SMART_AUDIENCE=
SMART_REFRESH_TOKEN=

# Vendor Presets (used automatically when vendor parameter is set)
EPIC_FHIR_BASE_URL=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4
EPIC_SMART_AUTH_URL=https://fhir.epic.com/interconnect-fhir-oauth/oauth2/authorize
EPIC_SMART_TOKEN_URL=https://fhir.epic.com/interconnect-fhir-oauth/oauth2/token

CERNER_FHIR_BASE_URL=https://fhir-ehr.code.cerner.com/r4
CERNER_SMART_AUTH_URL=https://authorization.cerner.com/tenants/YOUR_TENANT_ID/protocols/oauth2/profiles/smart-v1/authorize
CERNER_SMART_TOKEN_URL=https://authorization.cerner.com/tenants/YOUR_TENANT_ID/protocols/oauth2/profiles/smart-v1/token

# LLM Configuration
# Options: gpt-4, gpt-3.5-turbo, claude-3-opus, llama-2-7b, mistral-7b
# For OpenAI models (gpt-*): Set OPENAI_API_KEY below
# For Anthropic models (claude-*): Set ANTHROPIC_API_KEY below
# For local models (llama-*, mistral-*): Ensure model is installed locally
LLM_MODEL=gpt-4
OPENAI_API_KEY=sk-...your-openai-api-key...
ANTHROPIC_API_KEY=sk-ant-...your-anthropic-api-key...

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Paths
KB_PATH=./data/medical_kb
ADAPTER_PATH=./models/adapters
FEEDBACK_PATH=./data/feedback
BASE_MODEL=meta-llama/Llama-2-7b-hf

# MLC Learning Configuration
MLC_LEARNING_RATE=0.001

# Algorithm of Thought Configuration
REASONING_DEPTH=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/healthcare_ai.log

# Notifications
NOTIFICATION_URL=

# Security
ENABLE_HTTPS=False
CERTIFICATE_PATH=
PRIVATE_KEY_PATH=

# Database (optional)
DATABASE_URL=sqlite:///./healthcare_ai.db

# Testing
TEST_MODE=False
DEMO_MODE=True
